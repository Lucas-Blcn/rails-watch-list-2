<div class="container">
  <h2 class="py-3" style="font-family: 'Kdam Thmor Pro', sans-serif; font-size: 36px; text-decoration: underline">Your favorites lists</h2>
    <div class="cards py-2 mb-3">
      <% @lists.each do |list| %>
        <% if list.list_photo.present? && list.list_photo.start_with?('https://images') %>
          <div class="card-category bg-light" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%=list.list_photo%>'); position: relative;">
            <%= link_to list_path(list), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Delete this list ?' } do %>
              <i class="fa-solid fa-trash" style="color: #ffffff; font-size: 24px; position: absolute; top: 10px; right: 10px;"></i>
            <% end %>

        <% else %>
          <div class="card-category bg-light" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1535016120720-40c646be5580?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D); position: relative">
          <%= link_to list_path(list), method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Delete this list ?' } do %>
              <i class="fa-solid fa-trash" style="color: #ffffff; font-size: 24px; position: absolute; top: 10px; right: 10px;"></i>
            <% end %>

        <% end %>
      <%= link_to list.name, list_path(list), class:"text-size text-decoration-underline", style:"color:white" %>
    </div>
      <%end%>
  </div>
</div>


<div class = "container mb-5">
  <div class="col-6">
    <h2 style="font-family: 'Kdam Thmor Pro', sans-serif; font-size: 36px; text-decoration: underline">Create a new list🎬</h2>
    <%= simple_form_for @list do |f| %>
      <%= f.input :name, input_html: { id: "my_input_new_list" }, class: "" %>
      <%= f.input :list_photo, as: :string, placeholder: 'the url of your picture goes here \'https://images...\'' %>
      <%= f.button :submit, class:"btn btn-dark rounded"%>
    </div>
    <% end %>
  </div>

