<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= asset_path("banner.jpg") %>');">
  <div class="container">
      <h1>Your cinema at home <strong>when you want</strong>, <strong>whenever you want</strong> !🍿</h1>
      <p>Never ever forget your favorit movies.</p>
      <%= link_to "Create a new list", lists_path, class:"btn btn-primary"%>
    </div>
</div>


<div class="container">
  <h2>Your favorit lists</h2>
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <%= link_to list.name, list_path(list), class:"text-size text-decoration-none" %>
    <%end%>
    </div>

  <%= simple_form_for @list do |f| %>
    <%= f.input :name %>
    <%= f.button :submit %>
  <% end %>
</div>
