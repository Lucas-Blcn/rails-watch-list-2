<div class="banner mb-3" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%=@list.list_photo %>');">
<div class="container">
  <h1>Your movies from your <%= @list.name %> list (<%=@list.movies.count%> movies)</h1>
  <p> add, delete and tell to the world how was your experience</p>
  <p>
    <%= link_to root_path,class:"btn btn-secondary rounded shadow-sm" do%>
      <i class="fas fa-backward" style="color: #ffffff;"></i> Go Back
    <% end %>
    <%= link_to new_list_bookmark_path(@list),class:"btn btn-secondary rounded" do%>
      <i class="fa fa-plus"></i> Add a bookmark
    <% end %>
    <%= link_to list_path(@list),class:"btn btn-secondary rounded", method: :delete, data: { turbo_method: :delete, turbo_confirm: 'Delete this list ?' } do%>
      <i class="fa-solid fa-trash"></i> Delete this list
    <% end %>
  </p>

  </div>
</div>


<div class="container">
  <% @list.bookmarks.each do |bookmark| %>
  <div class = "mb-3 py-3 shadow p-2 bg-body rounded d-flex">
    <div class="comments-title">
      <p><strong><em>Movie Title:</em></strong> <%= bookmark.movie.title%></p>
      <p><strong><em>Comments:</em></strong> <%= bookmark.comment %></p>
      <%= link_to 'Delete',bookmark_path(bookmark), class:"btn btn-dark rounded" ,data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
    </div>

    <div class="maclasse">
      <img src=" <%= bookmark.movie.poster_url %> ">
    </div>
  </div>
  <%end%>
  </div>
